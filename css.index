#puzzle-grid {
    display: grid;
    grid-template-columns: repeat(4, 100px);
    grid-template-rows: repeat(4, 100px);
    gap: 10px;
}

.tile {
    width: 100px;
    height: 100px;
    background-color: #333;
    border: 1px solid #666;
    cursor: pointer;
}

.revealed {
    background-image: url('black-widow-image.jpg'); /* Replace with your image */
    background-size: cover;
}
